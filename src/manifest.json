{
  "manifest_version": 3,
  "name": "Isekai",
  "version": "1.0.1",
  "description": "Automate DeviantArt exclusive sales",
  "permissions": [
    "alarms",
    "storage",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "https://*.deviantart.com/*",
    "http://localhost:*/*",
    "https://*.ngrok-free.app/*",
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "src/background/service-worker.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://*.deviantart.com/*"],
      "js": ["src/content/deviantart-automation.ts"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "src/assets/favicon.png",
      "48": "src/assets/favicon.png",
      "128": "src/assets/favicon.png"
    }
  },
  "icons": {
    "16": "src/assets/favicon.png",
    "48": "src/assets/favicon.png",
    "128": "src/assets/favicon.png"
  },
  "options_page": "src/console/console.html",
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+I",
        "mac": "Command+Shift+I"
      },
      "description": "Open Isekai Agent popup"
    },
    "open-console": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "Open Isekai Agent console logs"
    }
  }
}
